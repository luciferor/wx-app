}

.target-right{
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center
}

.target-button{
    color: white;
    background-color: #5398ff;
    border-radius: 30rpx;
    width: 150rpx;
    height: 60rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 24rpx;
}
.target-price{
  font-size: 24rpx;
  color: #999999;
  margin-top: 20rpx;
}



.remind-icon{
  width: 24rpx;
  height: 24rpx;
  margin-left: 5rpx;
}

.org-icon{
   width: 24rpx;
  height: 20rpx;
  margin-left: 10rpx;
}

.modal-container{
  display: flex;
  flex-direction: column;
  align-items: center;  
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.modal-text{
  font-size: 28rpx;
  color: #333333;
}

.empty-img-arrow{
  width: 124rpx;
  height: 135rpx;
  position: absolute;
  right: 48rpx;
  margin-top: 20rpx;
}

.empty-container{
