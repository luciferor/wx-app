    align-items: center;
    margin-top: 25rpx;
}
.score-container{
   display: flex;
   flex-direction: column;
   margin-left: 30rpx;
}

.total-text{
  color: white;
  font-size: 30rpx;
}
.total-score{
  color: white;
  font-weight: bold;
  margin-top:10rpx;
