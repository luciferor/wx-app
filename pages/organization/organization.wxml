<view class='layout-container'>
  <view class='title-container'>
      <view class='title-left-container'>
            <view class='blue-icon'></view>
            <text class='title-text'>所有成员({{memberList.length}}人)</text>
      </view>
      <text class='org-text' bindtap='navigateToManageOrg' wx:if='{{isAdmin == 1}}'>组织管理</text>
  </view>
  
  <view class='content-container'>
      <view class='user-container' wx:key="*this" wx:for="{{memberList}}" wx:for-index="idx" wx:for-item="member">
          <view class='user-left-container'>
            <image  src="{{member.avatarurl==null||member.avatarurl==''?'../../images/mine/head_default_icon.png':'https://devqypyp.xiaohuibang.com'+ member.avatarurl}}" class='upic'></image>
            <text class='uname'>{{member.name}}</text>
          </view>
          <text class='user-right' id="idx" bindtap='deleteMember'>{{member.isadmin == 1 ? "创建者" :"删除"}}</text>
      </view>
      <view class='horizontal-line'></view>
  </view>

   <view class='bottom-container'>
      <view  >
          <button class="create-and-invite" open-type='share'>
            <i-icon type="share" size="28"/>邀请成员</button>
      
      </view>
   </view>
</view>

<i-toast id="toast" />