page{
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}

.layout-container{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  padding: 35rpx 0rpx 35rpx 32rpx;
  border: 1rpx solid #eeeeee;
  margin: 20rpx 24rpx 0rpx 24rpx;
}

.blue-icon{
  width: 6rpx;
  height: 28rpx;
  background-color: #5398ff;
  border-radius: 10rpx;
}
.top-title{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}

.title-text{
  color: #666666;
  font-size: 30rpx;
  margin-left:15rpx;
  line-height: 80rpx;
  align-items: right;
}

.score-container{
  display: flex;
  background: white;
  flex-direction: column;
  align-items: center;
  background: white;
  margin: 20rpx 24rpx 0rpx 24rpx;
  border: 1rpx solid #eeeeee;
}

.operate-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 35rpx 0rpx;
  margin-top: 0.5rpx;
  width: 100%;
  justify-content: space-between;
}

.operate-text{
  color: #333333;
  font-size: 30rpx;
  margin-left: 30rpx;
}

.operate-right-text{
  color: #333333;
  font-size: 30rpx;
  margin-right: 30rpx;
}

.operate-input{
  color: #666666;
  font-size: 30rpx;
  width: 350rpx;
}

.operate-input-max{
  color: #666666;
  font-size: 30rpx;
  padding-left: 5rpx;
  width: 250rpx;
}



.phcolor{
  color: #cccccc;
}

.horizontal-line{
  background: #eeeeee;
  width: 100%;
  height: 1rpx;
}

.max-container{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 35rpx 0rpx;
  background: white;
  margin: 20rpx 24rpx 0rpx 24rpx;
  border: 1rpx solid #eeeeee;
  justify-content: space-between;
}

.date-container{
  display: flex;
  flex-direction: row;
}

.operate-input-date{
  color: #666666;
  font-size: 30rpx;
  padding-left: 5rpx;
  width: 450rpx;
}

.date-icon{
  width: 44rpx;
  height: 44rpx;
  margin-right: 30rpx;
}

.bottom-container{
  background: white;
  padding: 20rpx 0rpx;
  width: 100%;
}

.button{
  background: #5398ff;
  margin-left: 24rpx;
  margin-right: 24rpx;
  border-radius: 4rpx;
  color: white;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 36rpx;
}

.fl{
  float:left;
}

.fr{
  float:right;
}