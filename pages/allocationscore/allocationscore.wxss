page{
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}

.container{
  width: 100%;
  height: 100%;
  padding: 20rpx 24rpx 0rpx 24rpx;
}

.add-container{
  background: white;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0rpx;
  width: 100%;
  border: 1rpx solid #eeeeee;
}

.add-icon{
  width: 40rpx;
  height: 40rpx;
}

.add-text{
  margin-left: 15rpx;
  color: #333333;
  font-size: 32rpx;
}


.bottom-container{
  width: 100%;
  height: 100%;
}

.content-container{
  display: flex;
  flex-direction: column;
  width: 100%;
}

.year-text{
  color: #999999;
  font-size: 24rpx;
  width: 100%;
  padding: 5rpx 0rpx;
}

.plan-container{
  width: 100%;
  margin-bottom: 20rpx;
}

.detail-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: white;
  align-items: center;
  padding: 35rpx 28rpx 35rpx 20rpx;
}

.left-container{
  display: flex;
  flex-direction: row;
}

.month-container{
  background: #5398ff;
  border-radius: 100rpx;
  text-align: center;
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
}

.month-text{
  color: white;
  font-size: 24rpx;
}

.info-container{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: center;

}

.score-text{
  color: #666666;
  font-size: 28rpx;
}

.number-text{
  color: #666666;
  font-size: 28rpx;
  margin-top: 24rpx;
}

.arrow{
  width: 30rpx;
  height: 30rpx;
}