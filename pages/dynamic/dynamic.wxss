.fl{
    float: left;
}
.fr{
    float: right;
}
.top-box{
    height: 260rpx;
    padding:30rpx;
}
.title-container{
  width: 100%;
  position: fixed;
  top: 0rpx;
  z-index: 100;
}


.top-title{
    height: 100rpx;
    color: #666666;
    line-height: 100%;
    text-align: left;
}
.titlespan{
    display:block;
    width: 8rpx;
	height: 32rpx;
	background-color: #5398ff;
    border-radius: 3px;
    margin-right:20rpx;
}

.titletext{
    display: block;
	font-family: PingFang-SC-Medium;
	font-size: 32rpx;
    color: #666666;
    font-family: PingFang-SC-Medium;
}


.top-swiperes{
    height:160rpx;
}

.top-swiperes-list1{
    width:450rpx;
    height: 160rpx;
    background-image: linear-gradient(90deg, 
		#5398ff 0%, 
		#4cb9ff 100%);
	box-shadow: 0px 6px 4px 0px 
		rgba(83, 152, 255, 0.4);
    border-radius: 10px;
}
.top-swiperes-list2{
    width:450rpx;
    height: 160rpx;
    background-image: linear-gradient(90deg, 
		#ff986b 0%, 
		#ffbf7a 100%);
	box-shadow: 0px 6px 4px 0px 
		rgba(255, 154, 108, 0.4);
	border-radius: 10px;
}
.top-swiperes-list3{
    width:450rpx;
    height: 160rpx;
    background-image: linear-gradient(90deg, 
		#36f870 0%, 
		#8fff8f 100%);
	box-shadow: 0px 6px 4px 0px 
		rgba(164, 247, 185, 0.4);
	border-radius: 10px;
}

.topimg-box{
    width:120rpx;
    height:120rpx;
    padding:20rpx;
}

.topimg-box image{
    width:116rpx;
    height: 116rpx;
    background-color: #e7e7e7;
    border: solid 2px #ffffff;
    border-radius: 68rpx;
}

.toptext-box{
    width:270rpx;
    height: 120rpx;
    font-size: 12px;
    margin:20rpx 0rpx;
}

.toptext-title{
    height: 60rpx;
    line-height: 60rpx;
    font-family: PingFang-SC-Medium;
	  font-size: 32rpx;
	  color: #ffffff;
    word-break:keep-all;      /* 不换行 */
    white-space:nowrap; 
}

.toptext-content-time{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 24rpx;
	color: #ffffff;
}

/* height:calc(100% - 260rpx); */
.under-list{
    height: 100%;
    overflow:hidden;
}

.under-list-box{
    width:100%;
    height:100%;
    overflow: scroll;
}

.user-list-content{
    width:calc(100% - 60rpx);
    border-bottom: 1px solid #eeeeee;
    height: 120rpx;
    line-height: 120rpx;
    padding:30rpx;
}

.under-list-img-box{
    width:100rpx;
    height: 100rpx;
    padding:10rpx;
}

.under-list-img-box image{
    width:98rpx;
    height: 98rpx;
    border-radius:69px;
	border: solid 1px #5398ff;
}

.user-li-title-box{
    height: 120rpx;
    padding-left:30rpx;
}

.user-li-title-box-listtitle{
    height: 60rpx;
    line-height: 60rpx;
}

.user-li-title-box-listtitle-name{
    font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #666666;
}
.user-li-title-box-listtitle-time{
    font-size: 28rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
    color: #999999;
    padding-left:20rpx;
}

.user-li-title-box-listdes{
    height: 60rpx;
    line-height: 60rpx;
    font-size: 32rpx;
    color: #333333;
}

.user-li-right-bf{
    font-size: 28rpx;
	color: #5398ff;
}

.swiper{
  height:160rpx !important;
}



/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  color:#999999;
}