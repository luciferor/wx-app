page{
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}

.layout-container{
  width: 100%;
  margin-top: 250rpx;
}

.top-fiexd{
  width: 100%;
  position: fixed;
  top: 0rpx;
  z-index: 100;
}

.time-container{
  text-align: center;
  margin-top: 20rpx;
}
.time-text{
  color: white;
  font-size: 24rpx;
  margin: 0 auto;
  background: #d9d9d9;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
}
.notice-container{
  display: flex;
  flex-direction: row;
  padding: 20rpx 24rpx;
}
.upic{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.content-container{
  margin-left: 20rpx;
  width: 100%;
}
.name-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.uname{
  color: #999999;
  font-size: 24rpx;
}
.status{
  color:#5398ff;
  font-size: 24rpx;
}
.info-container{
  background: white;
  padding: 24rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
}
.title{
  color: #333333;
  font-size: 30rpx;
}
.content{
  color: #666666;
  font-size: 26rpx;
  margin-top: 10rpx;
}