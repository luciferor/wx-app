page{
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}

.layout-container{
  width: 100%;
  height: 100%;
  margin-top: 120rpx;
}


.top-fiexd{
  width: 100%;
  position: fixed;
  top: 0rpx;
  z-index: 100;
}

.time-container{
  text-align: center;
  margin-top: 20rpx;
}
.time-text{
  color: white;
  font-size: 24rpx;
  margin: 0 auto;
  background: #d9d9d9;
  padding: 10rpx 20rpx;
  border-radius: 4rpx;
}
.notice-container{
  display: flex;
  flex-direction: row;
  padding: 20rpx 24rpx;
}
.upic{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.content-container{
  margin-left: 20rpx;
  width: 100%;
}
.name-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.uname{
  color: #999999;
  font-size: 24rpx;
}
.status{
  color:#5398ff;
  font-size: 24rpx;
}
.info-container{
  background: white;
  padding: 24rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
}
.title{
  color: #333333;
  font-size: 30rpx;
}
.content{
  font-size: 26rpx;
  margin-top: 10rpx;
  color: #666666
}


.empty-container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  align-items: center;
}

.empty-img{
  margin-top: 200rpx;
  width: 420rpx;
  height: 360rpx;
}
.empty-text{
  color: #b5c9e6;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.dot-container{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.dot-image{
  width: 40rpx;
  height: 8rpx;
  margin-top: 20rpx;
}

.apply-text{
  color: #ffb400;
   font-size: 24rpx;
}

.pass-text{
  color: #5398ff;
  font-size: 24rpx;
}

.reject-text{
  color: #ff4b48;
   font-size: 24rpx;
}

.check-container{
  display: flex;
  flex-direction: row;
  border: 1rpx solid #5398ff;
  float: right;
  z-index: 100rpx;
  position: absolute;
  right: 80rpx;
  margin-top: 10rpx;
  border-radius: 4rpx;
}
.check-container:after{
  content: '';
  position: absolute;
  top:5rpx;
  right:-10rpx;
  width:0;
  height:0;
  border-top:10rpx solid transparent;
  border-bottom:10rpx solid transparent;
  border-left:10rpx solid #5398ff;
 }

.reject-btn{
  background: white;
  color: #5398ff;
  font-size: 32rpx;
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center
}

.pass-btn{
  background: #5398ff;
  color: white;
  font-size: 32rpx;
  width: 180rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: none;
  text-align: center
}

.badge{
  left: 80rpx;
  background: #ff5959;
  width: 18rpx;
  height: 18rpx;
  border-radius: 18rpx;
  border: 1rpx solid white;
  position: absolute;
}

.badge-container{
  display: flex;
}