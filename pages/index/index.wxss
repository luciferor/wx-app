/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.under-tabmenu{
  width:100%;
  background:red;
}

.under-tabmenu .menulist{
  width:100%;
}




.linces-wx-mask{
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
}
.linces-wx-dialog{
  position: fixed;
  z-index: 5000;
  width: 70%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color:transparent;
  text-align: center;
  border-radius: 15rpx;
  overflow: hidden;
}

.lincesbox{
  background:#5398ff;
  width:100%;
  height:320rpx;
  box-shadow: 0px 6px 10px 0px 
  rgba(0, 65, 163, 0.3);
}

.linscesbtn{
  height: 80rpx;
  background-color: #5398ff !important;
  font-size: 30rpx;
  line-height: 80rpx;
  color:white !important;
}
